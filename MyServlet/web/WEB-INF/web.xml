<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- 配置 servlet-->
        <!-- 配置类路径-->
    <servlet>
        <servlet-name>my</servlet-name>
        <servlet-class>com.pfuser.Myservlet.Myservlet</servlet-class>
    </servlet>
        <!--配置访问方式-->
    <servlet-mapping>
        <servlet-name>my</servlet-name>
        <url-pattern>/my</url-pattern>
    </servlet-mapping>
    <!--第二个servlet的配置-->


    <servlet>
        <servlet-name>my2</servlet-name>
        <servlet-class>com.pfuser.Myservlet.MyServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>my2</servlet-name>
        <url-pattern>/my2</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ServletLife</servlet-name>
        <servlet-class>com.pfuser.ServletTest.ServletLife</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLife</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletMethod</servlet-name>
        <servlet-class>com.pfuser.ServletMethod.ServletMethod</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletMethod</servlet-name>
        <url-pattern>/method</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestServlet</servlet-name>
        <servlet-class>com.pfuser.Request.ReuestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestServlet</servlet-name>
        <url-pattern>/req</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ResponceServlet</servlet-name>
        <servlet-class>com.pfuser.responce.ResponceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponceServlet</servlet-name>
        <url-pattern>/resp</url-pattern>
    </servlet-mapping>
</web-app>